<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fitsSystemWindows="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <com.google.android.material.appbar.CollapsingToolbarLayout
            android:id="@+id/collapsing_toolbar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/space_cadet"
            android:fitsSystemWindows="true"
            app:contentScrim="@color/space_cadet"
            app:layout_scrollFlags="scroll|snap|exitUntilCollapsed"
            app:titleTextColor="@color/wa_white">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_collapseMode="pin">

                <org.hzontal.shared_ui.appbar.ToolbarComponent
                    android:id="@+id/toolbar"
                    android:layout_width="match_parent"
                    android:layout_height="?attr/actionBarSize"
                    android:textStyle="bold"
                    app:arrowBackIcon="@drawable/ic_back_white"/>

                <TextView
                    style="@style/Tella_Main_White_Text.Bold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/activity_horizontal_margin"
                    android:text="@string/Home_BottomNav_Resources" />
            </LinearLayout>

        </com.google.android.material.appbar.CollapsingToolbarLayout>

        <!-- Override tabIconTint attribute of style with selector -->
        <!--   <com.google.android.material.tabs.TabLayout
               android:id="@+id/tabs"
               android:layout_width="match_parent"
               android:layout_height="?attr/actionBarSize"
               app:tabMode="scrollable"
               app:tabTextColor="@color/bottom_nav_item_color" />-->

       </com.google.android.material.appbar.AppBarLayout>

       <FrameLayout
           android:id="@+id/blankFormView"
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           android:animateLayoutChanges="true"
           android:background="@color/space_cadet"
           android:visibility="gone"
           tools:context="rs.readahead.washington.mobile.views.fragment.resources.ResourcesListFragment">

           <androidx.recyclerview.widget.RecyclerView
               android:id="@+id/resourcesRecyclerView"
               android:layout_width="match_parent"
               android:layout_height="match_parent"
               android:paddingBottom="60dp"
               android:layout_marginHorizontal="@dimen/activity_horizontal_margin"
               />


           <LinearLayout
               android:layout_width="match_parent"
               android:layout_height="match_parent"
               android:orientation="vertical">

               <TextView
                   android:id="@+id/banner"
                   android:layout_width="match_parent"
                   android:layout_height="wrap_content"
                   android:background="@color/light_yellow"
                   android:padding="16dp"
                   android:text="@string/collect.blank_banner_forms.updated"
                   android:textAlignment="center"
                   android:textColor="@color/wa_gray"
                   android:textSize="14sp"
                   android:textStyle="bold"
                   android:visibility="visible" />

               <ScrollView
                   android:layout_width="match_parent"
                   android:layout_height="match_parent"
                   android:fillViewport="true"
                   android:scrollbars="vertical">

                   <RelativeLayout
                       android:id="@+id/forms"
                       android:layout_width="match_parent"
                       android:layout_height="wrap_content"
                       android:background="@color/space_cadet"
                       android:paddingStart="8dp"
                       android:paddingEnd="8dp"
                       android:paddingBottom="@dimen/fab_clear_padding">

                       <TextView
                           android:id="@+id/downloaded_forms_title"
                           android:layout_width="match_parent"
                           android:layout_height="50dp"
                           android:layout_alignParentTop="true"
                           android:gravity="center_vertical"
                           android:text="@string/Forms_BlankSubheadingDownloadedForms"
                           android:textAlignment="center"
                           android:textColor="@color/wa_white_80"
                           android:textSize="16sp"
                           android:textStyle="bold"
                           android:visibility="gone" />

                       <LinearLayout
                           android:id="@+id/downloadedForms"
                           android:layout_width="match_parent"
                           android:layout_height="wrap_content"
                           android:layout_below="@id/downloaded_forms_title"
                           android:background="@color/space_cadet"
                           android:clipToPadding="false"
                           android:orientation="vertical"
                           android:scrollbarStyle="outsideOverlay"
                           android:scrollbars="vertical"
                           app:layout_behavior="@string/appbar_scrolling_view_behavior" />

                       <TextView
                           android:id="@+id/avaivable_forms_title"
                           android:layout_width="match_parent"
                           android:layout_height="50dp"
                           android:layout_below="@id/downloadedForms"
                           android:gravity="center_vertical"
                           android:text="@string/Forms_BlankSubheadingFormsOnServers"
                           android:textAlignment="center"
                           android:textColor="@color/wa_white_80"
                           android:textSize="16sp"
                           android:textStyle="bold"
                           android:visibility="gone" />

                       <LinearLayout
                           android:id="@+id/blankForms"
                           android:layout_width="match_parent"
                           android:layout_height="wrap_content"
                           android:layout_below="@id/avaivable_forms_title"
                           android:background="@color/space_cadet"
                           android:clipToPadding="false"
                           android:orientation="vertical"
                           android:scrollbarStyle="outsideOverlay"
                           android:scrollbars="vertical"
                           app:layout_behavior="@string/appbar_scrolling_view_behavior" />

                   </RelativeLayout>
               </ScrollView>
           </LinearLayout>

           <TextView
               android:id="@+id/blank_forms_info"
               style="@style/ExplanatoryEmptyMessage"
               android:layout_width="match_parent"
               android:layout_height="wrap_content"
               android:layout_gravity="top"
               android:text="@string/collect.blank_expl_no.forms"
               android:visibility="gone" />

           <com.google.android.material.floatingactionbutton.FloatingActionButton
               android:id="@+id/fab"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_gravity="end|bottom"
               android:layout_margin="@dimen/fab_margin"
               android:layout_marginHorizontal="@dimen/tella_main_vertical"
               android:layout_marginBottom="@dimen/tella_main_vertical"
               android:background="@color/dark_orange"
               android:contentDescription="@string/action_refresh"
               android:src="@drawable/baseline_autorenew_24"
               android:visibility="visible"
               app:backgroundTint="@color/dark_orange" />

       </FrameLayout>
   </androidx.constraintlayout.widget.ConstraintLayout>