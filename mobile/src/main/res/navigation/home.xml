<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/home"
    app:startDestination="@+id/homeScreen">
    <include app:graph="@navigation/mic" />

    <fragment
        android:id="@+id/homeScreen"
        android:name="rs.readahead.washington.mobile.views.fragment.vault.home.HomeVaultFragment"
        android:label="@string/Home_BottomNav_Home"
        tools:layout="@layout/fragment_vault">
        <action
            android:id="@+id/action_homeScreen_to_main_settings"
            app:destination="@id/main_settings"
            app:enterAnim="@anim/slide_in_start"
            app:exitAnim="@anim/fade_out" />

        <action
            android:id="@+id/action_homeScreen_to_attachments_screen"
            app:destination="@id/attachments_screen"
            app:enterAnim="@anim/slide_in_start"
            app:exitAnim="@anim/fade_out" />

        <action
            android:id="@+id/action_homeScreen_to_reports_screen"
            app:destination="@id/reportsScreen"
            app:enterAnim="@anim/slide_in_start"
            app:exitAnim="@anim/fade_out" />

        <action
            android:id="@+id/action_homeScreen_to_uwazi_screen"
            app:destination="@id/uwaziScreen"
            app:enterAnim="@anim/slide_in_start"
            app:exitAnim="@anim/fade_out" />

        <action
            android:id="@+id/action_homeScreen_to_forms_screen"
            app:destination="@id/formScreen"
            app:enterAnim="@anim/slide_in_start"
            app:exitAnim="@anim/fade_out" />

        <action
            android:id="@+id/action_homeScreen_to_resources_screen"
            app:destination="@id/resourcesScreen"
            app:enterAnim="@anim/slide_in_start"
            app:exitAnim="@anim/fade_out" />
    </fragment>

    <fragment
        android:id="@+id/attachments_screen"
        android:name="rs.readahead.washington.mobile.views.fragment.vault.attachements.AttachmentsFragment"
        tools:layout="@layout/fragment_vault_attachments">
        <action
            android:id="@+id/action_attachments_screen_to_edit_screen"
            app:destination="@id/edit_screen"
            app:enterAnim="@anim/slide_in_start"
            app:exitAnim="@anim/fade_out" />
        <action
            android:id="@+id/action_attachments_screen_to_info_screen"
            app:destination="@id/info_screen"
            app:enterAnim="@anim/slide_in_start"
            app:exitAnim="@anim/fade_out" />
        <action
            android:id="@+id/action_attachments_screen_to_camera"
            app:destination="@id/cameraScreen" />
        <action
            android:id="@+id/action_attachments_screen_to_micro"
            app:destination="@id/mic" />
    </fragment>

    <fragment
        android:id="@+id/edit_screen"
        android:name="rs.readahead.washington.mobile.views.fragment.vault.edit.VaultEditFragment"
        android:label="@string/Vault_FileEdit_SheetAction"
        tools:layout="@layout/fragment_vault_info" />

    <fragment
        android:id="@+id/info_screen"
        android:name="rs.readahead.washington.mobile.views.fragment.vault.info.VaultInfoFragment"
        android:label="@string/Vault_FileInfo"
        tools:layout="@layout/fragment_vault_info" />

    <activity
        android:id="@+id/main_settings"
        android:name="rs.readahead.washington.mobile.views.activity.SettingsActivity"
        android:label="@string/settings_app.bar"
        tools:layout="@layout/activity_settings" />

    <fragment
        android:id="@+id/reportsScreen"
        android:name="rs.readahead.washington.mobile.views.fragment.reports.ReportsFragment"
        android:label="@string/Home_BottomNav_Reports"
        tools:layout="@layout/fragment_reports">

        <action
            android:id="@+id/action_reportsScreen_to_newReport_screen"
            app:destination="@id/newReportScreen"
            app:enterAnim="@anim/slide_in_start"
            app:exitAnim="@anim/fade_out" />

        <action
            android:id="@+id/action_reportsScreen_to_reportSendScreen"
            app:destination="@id/reportSendScreen"
            app:enterAnim="@anim/slide_in_start"
            app:exitAnim="@anim/fade_out" />

        <action
            android:id="@+id/action_reportsScreen_to_reportSubmittedScreen"
            app:destination="@id/reportSubmittedScreen"
            app:enterAnim="@anim/slide_in_start"
            app:exitAnim="@anim/fade_out" />
    </fragment>

    <fragment
        android:id="@+id/newReportScreen"
        android:name="rs.readahead.washington.mobile.views.fragment.reports.entry.ReportsEntryFragment"
        android:label="@string/Reports_Title_Screen"
        tools:layout="@layout/fragment_reports_entry">

        <action
            android:id="@+id/action_newReport_to_micScreen"
            app:destination="@id/micScreen"
            app:enterAnim="@anim/slide_in_start"
            app:exitAnim="@anim/fade_out" />

        <action
            android:id="@+id/action_newReport_to_reportSendScreen"
            app:destination="@id/reportSendScreen"
            app:enterAnim="@anim/slide_in_start"
            app:exitAnim="@anim/fade_out"
            app:popUpToInclusive="true" />
    </fragment>

    <fragment
        android:id="@+id/reportSendScreen"
        android:name="rs.readahead.washington.mobile.views.fragment.reports.send.ReportsSendFragment"
        android:label="Send"
        tools:layout="@layout/fragment_send_report"></fragment>

    <fragment
        android:id="@+id/reportSubmittedScreen"
        android:name="rs.readahead.washington.mobile.views.fragment.reports.submitted.ReportSubmittedFragment"
        android:label="Send"
        tools:layout="@layout/fragment_send_report"></fragment>

    <fragment
        android:id="@+id/formScreen"
        android:name="rs.readahead.washington.mobile.views.fragment.forms.CollectMainFragment"
        android:label="@string/Home_BottomNav_Forms"
        tools:layout="@layout/activity_collect_main" />

    <fragment
        android:id="@+id/uwaziScreen"
        android:name="rs.readahead.washington.mobile.views.fragment.uwazi.UwaziFragment"
        android:label="Uwazi"
        tools:layout="@layout/fragment_uwazi">
        <action
            android:id="@+id/action_uwaziScreen_to_uwaziDownloadScreen"
            app:destination="@id/uwaziDownloadScreen"></action>
        <action
            android:id="@+id/action_uwaziScreen_to_uwaziEntryScreen"
            app:destination="@id/uwaziEntryScreen"></action>

        <action
            android:id="@+id/action_uwaziEntryScreen_to_uwaziSendScreen"
            app:destination="@id/uwaziSendScreen"></action>

        <action
            android:id="@+id/action_uwaziScreen_to_uwaziSubmittedPreview"
            app:destination="@id/uwaziSubmittedPreviewScreen"></action>
    </fragment>


    <fragment
        android:id="@+id/uwaziDownloadScreen"
        android:name="rs.readahead.washington.mobile.views.fragment.uwazi.download.DownloadedTemplatesFragment"
        android:label="Uwazi"
        tools:layout="@layout/fragment_downloaded_templates"></fragment>

    <fragment
        android:id="@+id/uwaziEntryScreen"
        android:name="rs.readahead.washington.mobile.views.fragment.uwazi.entry.UwaziEntryFragment"
        android:label="Entry"
        tools:layout="@layout/uwazi_entry_fragment">
        <action
            android:id="@+id/action_uwaziEntryScreen_to_uwaziSendScreen"
            app:destination="@id/uwaziSendScreen"></action>
    </fragment>

    <fragment
        android:id="@+id/uwaziSendScreen"
        android:name="rs.readahead.washington.mobile.views.fragment.uwazi.send.UwaziSendFragment"
        android:label="Send"
        tools:layout="@layout/uwazi_send_fragment"></fragment>

    <fragment
        android:id="@+id/uwaziSubmittedPreviewScreen"
        android:name="rs.readahead.washington.mobile.views.fragment.uwazi.SubmittedPreviewFragment"
        android:label="Send"
        tools:layout="@layout/fragment_sumbitted_preview"></fragment>

    <fragment
        android:id="@+id/resourcesScreen"
        android:name="rs.readahead.washington.mobile.views.fragment.resources.ResourcesListFragment"
        android:label="@string/Home_BottomNav_Resources"
        tools:layout="@layout/fragment_resources_list" />
</navigation>
